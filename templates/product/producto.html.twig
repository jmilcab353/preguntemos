{% extends 'base.html.twig' %}

{% block title %}Detalle del Producto{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Detalle del Producto</h1>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Campo</th>
                    <th>Valor</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>ID</td>
                    <td>{{ producto.id }}</td>
                </tr>
                <tr>
                    <td>Nombre</td>
                    <td>{{ producto.nombre }}</td>
                </tr>
                <tr>
                    <td>Precio</td>
                    <td>{{ producto.precio }} €</td>
                </tr>
            </tbody>
        </table>

        <div class="actions mt-4">
            <a href='#' class="btn btn-warning btn-sm">Actualizar</a>
            <a href='#' class="btn btn-danger btn-sm">Eliminar</a>
            <a href='#' class="btn btn-info btn-sm">Modificar</a>
            {# <a href="{{ path('update_producto', { id: producto.id }) }}" class="btn btn-warning btn-sm">Actualizar</a>
            <a href="{{ path('delete_producto', { id: producto.id }) }}" class="btn btn-danger btn-sm" onclick="return confirm('¿Estás seguro de que deseas eliminar este producto?')">Eliminar</a>
            <a href="{{ path('modify_producto', { id: producto.id }) }}" class="btn btn-info btn-sm">Modificar</a> #}
        </div>

        <div class="mt-3">
            <a href="{{ path('producto_todos') }}" class="btn btn-secondary">Volver al listado</a>
        </div>
    </div>
{% endblock %}

